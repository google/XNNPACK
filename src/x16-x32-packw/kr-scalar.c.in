$assert NR > 1
$assert KR > 1
$assert TYPE in ["uint16_t"]
$assert BTYPE in ["uint32_t"]

#include <assert.h>
#include <stddef.h>
#include <stdint.h>

#include "src/xnnpack/packw.h"

$BITS = 16
$BIAS_BITS = 32
$WTYPE = $TYPE

void xnn_x${BITS}_x${BIAS_BITS}_packw_gemm_goi_ukernel_x${NR}c${KR}__scalar(
  size_t g,
  size_t nc,
  size_t kc,
  size_t nr,
  size_t kr,
  size_t sr,
  const ${WTYPE}* weights,
  const ${BTYPE}* bias,
  const void* scale,
  ${WTYPE}* packed_weights,
  size_t extra_bytes,
  const void* params)
{
  assert(g != 0);
  assert(nc != 0);
  assert(kc != 0);
  assert(nr == ${NR});
  assert(kr == ${KR});
  assert(sr == 1);
  assert(weights != NULL);
  assert(packed_weights != NULL);

  ${TYPE}* out = (${TYPE}*) packed_weights;
  const ${BTYPE}* b = (const ${BTYPE}*) bias;

  do {
    // NC main loop multiple of ${NR}
    const ${TYPE}* w0 = (const ${TYPE}*) weights;
    size_t n = nc;
    for (;n >= ${NR}; n -= ${NR}) {
      if XNN_LIKELY(b != NULL) {
        memcpy(out, b, ${NR} * sizeof(${BTYPE}));
        b += ${NR};
      } else {
        memset(out, 0, ${NR} * sizeof(${BTYPE}));
      }
      out += ${NR} * sizeof(${BTYPE}) / sizeof(${TYPE});

      $for N in range(1, NR):
        const ${TYPE}* w${N} = w${N-1} + kc;

      // KC main loop multiple of ${NR}x${KR}
      size_t k = kc;
      for (; k >= ${KR}; k -= ${KR}) {
        $for N in range(NR):
          $for K in range(KR):
            const ${TYPE} v${N}x${K} = w${N}[${K}];
          $for K in range(KR):
            out[${N*KR+K}] = v${N}x${K};
          w${N} += ${KR};
        out += ${NR*KR};
      }

      // KC remainder of 1..${KR-1}
      if (k != 0) {
        assert(k >= 1 && k <= ${KR-1});
        $for N in range(NR):
          const ${TYPE} v${N}x0 = w${N}[0];
          $for K in range(1, KR):
            const ${TYPE} v${N}x${K} = ${K} < k ? w${N}[${K}] : 0;
          out[${N*KR}] = v${N}x0;
          $for K in range(1, KR):
            out[${N*KR+K}] = v${N}x${K};
          w${N} += k;
        out += ${NR*KR};
      }

      out = (${TYPE}*) ((uintptr_t) out + extra_bytes);
      w0 = w${NR-1};
    }

    // NC remainder (1..${NR-1})
    if XNN_UNLIKELY(n != 0) {
      if XNN_LIKELY(b != NULL) {
        size_t nb = n;
        do {
            *((${BTYPE}*) out) = *b++;
            out += sizeof(${BTYPE}) / sizeof(${TYPE});
        } while (--nb != 0);
      } else {
        size_t nb = n;
        do {
            *((${BTYPE}*) out) = 0;
            out += sizeof(${BTYPE}) / sizeof(${TYPE});
        } while (--nb != 0);
      }
      out += (${NR} - n) * sizeof(${BTYPE}) / sizeof(${TYPE});

     $if NR > 2:
        // NR remainder has less than ${NR} rows so last row is not loaded
      $for N in range(1, NR-1):
        const ${TYPE}* w${N} = w${N-1} + kc;
        $if N % 2 == 0:
          if XNN_UNPREDICTABLE(n <= ${N}) {
            w${N} = w${N-1};
          }
        $else:
          if XNN_UNPREDICTABLE(n < ${N+1}) {
            w${N} = w${N-1};
          }

      // KC main loop multiple of ${NR}x${KR}
      size_t k = kc;
      for (; k >= ${KR}; k -= ${KR}) {
        $for N in range(NR-1):
          $for K in range(KR):
            const ${TYPE} v${N}x${K} = w${N}[${K}];
          $for K in range(KR):
            out[${N*KR+K}] = v${N}x${K};
          w${N} += ${KR};
        out += ${NR*KR};
      }

      // KC remainder of 1..${KR-1}
      if (k != 0) {
        assert(k >= 1 && k <= ${KR-1});
        $for N in range(NR-1):
          const ${TYPE} v${N}x0 = w${N}[0];
          $for K in range(1, KR):
            const ${TYPE} v${N}x${K} = ${K} < k ? w${N}[${K}] : 0;
          out[${N*KR}] = v${N}x0;
          $for K in range(1, KR):
            out[${N*KR+K}] = v${N}x${K};
          w${N} += k;
        out += ${NR*KR};
      }

      out = (${TYPE}*) ((uintptr_t) out + extra_bytes);
    }
    weights += nc * kc;
  } while (--g != 0);
}
